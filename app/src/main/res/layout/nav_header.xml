<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigation_profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:src="@drawable/note_fundo"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp" />


    <EditText
        android:id="@+id/eMail_navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/com_facebook_button_text_color"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:hint="Email Address" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUNDOO NOTES"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#EF0E73"
        android:textColorHighlight="#C51162"
        android:textColorHint="#C51162"
        android:textSize="30sp"
        android:textStyle="bold" />


</LinearLayout>